@import url('http://fonts.googleapis.com/css?family=Cinzel')

@import '../../bower_components/rainbow/themes/github.css'

*
  box-sizing border-box

body, html
  height 100%
  margin 0
  font-family 'HelveticaNeue-Light', 'Helvetica Neue', Helvetica, Arial
  font-weight 400
  color #444
  font-size 18px

h1, h2, h3
  font-size 3.5em
  font-family 'Cinzel', serif
  margin-top 0
  margin-bottom 0.5em

h1 + h3
  margin-top -1.3em

h1
  img
    max-height 2em
    vertical-align bottom
    float right
h2
  font-size 2em
  margin-top 0

h3
  font-size 1.5em
  margin-top 1em

.step
  opacity 0.3
  transition opacity 0.5s
  &.active
    opacity 1

.author
  margin-top 6em
  img
    float left
    height 150px
    margin-right 1em
  .row
    margin-top 0.8em
    font-size 1.7em
a
  color #399ab8
  text-decoration none

.step
  width 1000px
.step-full
  img
    width 1000px
  h1
    color #399ab8
    font-family 'HelveticaNeue-Light'
    font-weight 400
  text-align center
table
  td
    padding 0.5em 2em
  img
    max-width 100px
    max-height 150px
  tbody
    td:first-child
      text-align center
.compile
  overflow hidden
  img
    max-height 80px

.language
  position relative
  .logo
    position absolute
    top 0.5em
    right 0.5em
    font-size 2em
    font-family 'Cinzel', serif

  .logo-coffeescript
    top 7px
    img
      height 40px

.step-sidebar
  padding-left 240px

ul
  margin 0
  li
    padding 0.7em 0
  ul
    li
      padding 0.3em 0

.plus
  color #A6E22A
.sidebar
  position absolute
  top 1em
  left 0
.gist
  margin-top 1em
.terminal
  max-width 800px
  display block
  margin-bottom 1em
.row
  overflow hidden
  .column
    float left
  .column1-2
    width 50%

